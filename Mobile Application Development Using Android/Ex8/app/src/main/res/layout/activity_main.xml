<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Reminder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>
    <EditText
        android:id="@+id/appointmentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter appointment details"/>

    <EditText
        android:id="@+id/recipientEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter recipient email"/>

    <EditText
        android:id="@+id/recipientPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter recipient phone number"/>

    <Button
        android:id="@+id/sendEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email Reminder"/>

    <Button
        android:id="@+id/sendSmsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS Reminder"/>
</LinearLayout>
